---
import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro";
import RequirementCard from "../components/RequirementCard.astro";
import SkillCarousel from "../components/SkillCarousel.astro";

const requirementSkills = [
  {
    iconClass: "fa-solid fa-hands-holding",
    title: "Managing Project",
    levelText: "Intermediate",
    levelNumber: 3,
  },
  {
    iconClass: "fa-solid fa-gear",
    title: "Requirements",
    levelText: "Advanced",
    levelNumber: 4,
  },
  {
    iconClass: "fa-solid fa-palette",
    title: "Design",
    levelText: "Expert",
    levelNumber: 5,
  },
  {
    iconClass: "fa-solid fa-code",
    title: "Construction",
    levelText: "Advanced",
    levelNumber: 4,
  },
  {
    iconClass: "fa-solid fa-circle-check",
    title: "Testing",
    levelText: "Basic",
    levelNumber: 2,
  },
  {
    iconClass: "fa-solid fa-wrench",
    title: "Maintenance",
    levelText: "Basic",
    levelNumber: 2,
  },
];

const getLevelText = (level: number): string => {
  if (level === 5) return "Expert";
  if (level === 4) return "Advanced";
  if (level === 3) return "Intermediate";
  if (level === 2) return "Basic";
  if (level === 1) return "";

  return "Basic";
};

const softwareTools = [
  {
    imgSrc: "/assets/MSOffice.png",
    altText: "Microsoft Office Icon",
    name: "Microsoft Office",
    level: 5,
  },
  {
    imgSrc: "/assets/GitHub.png",
    altText: "GitHub Icon",
    name: "GitHub",
    level: 4,
  },
  {
    imgSrc: "/assets/Figma.png",
    altText: "Figma Icon",
    name: "Figma",
    level: 5,
  },
  { imgSrc: "/assets/Jira.png", altText: "Jira Icon", name: "Jira", level: 4 },
  {
    imgSrc: "/assets/VSCode.png",
