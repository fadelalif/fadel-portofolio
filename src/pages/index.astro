    name: "SonarQube",
    level: 2,
  },
  {
    imgSrc: "/assets/Katalon.png",
    altText: "Katalon Icon",
    name: "Katalon",
    level: 2,
  },
  { imgSrc: "/assets/Maze.png", altText: "Maze Icon", name: "Maze", level: 5 },
  {
    imgSrc: "/assets/Photoshop.png",
    altText: "Photoshop Icon",
    name: "Adobe Photoshop",
    level: 4,
  },
  {
    imgSrc: "/assets/Canva.png",
    altText: "Canva Icon",
    name: "Canva",
    level: 5,
  },
].map((tool) => ({ ...tool, levelText: getLevelText(tool.level) }));

