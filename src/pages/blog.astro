---
import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro"; // Pastikan path ke Header benar
---

<Layout title="Blog - Coming Soon">
  <Header />
  <main>
    <div
      class="container mx-auto px-4 sm:px-8 md:px-20 min-h-[70vh] flex flex-col items-center justify-center text-center py-20"
    >
      <div data-aos="fade-up">
        <i class="fa-solid fa-gears text-7xl text-[#ff4309]"></i>
      </div>
      <h2
        class="text-white font-bold text-4xl leading-tight mt-8"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        On Develop Hehehe, Coming Soon!
      </h2>
      <p
        class="mt-4 text-gray-300 text-lg max-w-lg"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        I'm currently under the hood building this section. Check back soon to
        see my thoughts and articles on software engineering and design.
      </p>
      <div data-aos="fade-up" data-aos-delay="300">
        <a
          href="/"
          class="mt-8 inline-block rounded-md bg-gradient-to-r from-[#FF4E09] to-[#FF804E] px-8 py-3 font-semibold text-white shadow-lg transition-transform transform hover:scale-105 duration-300"
        >
          Go Back Home
        </a>
      </div>
    </div>
  </main>
</Layout>
